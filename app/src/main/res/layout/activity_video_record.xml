<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoRecord">


    <include layout="@layout/content_video_record" />


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_marginVertical="100dp"
        app:layout_anchor="@+id/videoView"
        app:layout_anchorGravity="center" />
    <Button
        android:id="@+id/video_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="550dp"
        android:layout_marginStart="300dp"
        android:text="Upload" />


    <Button
        android:id="@+id/video_button_stop"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="550dp"
        android:layout_marginStart="200dp"
        android:text="CANCEL" />

    <Button
        android:id="@+id/video_button_play"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="550dp"
        android:layout_marginStart="100dp"
        android:text="Play" />
    <Button
        android:id="@+id/video_button_start"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="550dp"
        android:layout_marginStart="10dp"
        android:text="Start" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="700dp"
        android:layout_marginStart="10dp"
        android:background="#FFC107"
        android:text="Select the Activity" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginVertical="650dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="630dp"
        android:progress="1"
        android:layout_height="20dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>